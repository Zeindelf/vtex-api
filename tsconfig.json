{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "allowJs": true
  },
  "include": [
    "src/**/*.ts",
    "src/typings",
    "src/global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.mocks.ts",
    "**/__specs__/**/*",
    "**/__tests__/**/*",
    "**/__mocks__/**/*"
  ]
}
