{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "lib",
    "sourceMap": false,
    "strict": true,
    "allowJs": true
  },
  "include": [
    "**/src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/__specs__/**/*",
    "**/__tests__/**/*"
  ]
}
